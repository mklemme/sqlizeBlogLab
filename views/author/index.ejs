<% include ../partials/header %>

  <p>
    <a href="/posts">See all posts</a>
  </p>

  <h1>Authors Page</h1>
  <a href="/authors/new">Add a new author</a>
  <% allAuthors.forEach(function(author,index){ %>
  <h2>
  <%= index +1%> - <%= author.name %>
  </h2>
  <p><%= author.bio%></p>

  <a href="/posts/<%= author.id%>/new">Add a post</a>
  <br>
  <a href="/authors/<%= author.id%>/posts">See <%= author.name %>'s posts</a>
  <br>
  <a href="/authors/<%= author.id %>/edit">Edit this author</a>


  <form action="/authors/<%= author.id %>?_method=delete" method="post">
    <input type="submit" value="Delete this author">
  </form>



  <% }); %>



<% include ../partials/footer %>
